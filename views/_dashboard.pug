extends _admin-main

block content

    #wrapper
        #content-wrapper.d-flex.flex-column
            #content
                nav.navbar.navbar-light.navbar-expand.bg-white.shadow.mb-4.topbar.static-top
                    .container
                        button#sidebarToggleTop.btn.btn-link.d-md-none.rounded-circle.me-3(type='button')
                            i.fas.fa-bars
                        img(src='img/logo.png' alt='' width='200')
                        ul.navbar-nav.flex-nowrap.ms-auto
                            .d-none.d-sm-block.topbar-divider
                            li.nav-item.dropdown.no-arrow
                                .nav-item.dropdown.no-arrow
                                    a.dropdown-toggle.nav-link(aria-expanded='false' data-bs-toggle='dropdown' href='#')
                                        span.d-none.d-lg-inline.me-2.text-gray-600.small
                                            | Gadim
                                            | Valiyev
                                        img.border.rounded-circle.img-profile(src='img/avatar3.jpeg')
                                    .dropdown-menu.shadow.dropdown-menu-end.animated--grow-in
                                        a.dropdown-item(href='#')
                                            i.fas.fa-user.fa-sm.fa-fw.me-2.text-gray-400
                                            | &nbsp;Profile
                                        .dropdown-divider
                                        a(style='cursor: pointer;').dropdown-item.logout
                                            i.fas.fa-sign-out-alt.fa-sm.fa-fw.me-2.text-gray-400
                                            | &nbsp;Logout
            // !Messages will go there
